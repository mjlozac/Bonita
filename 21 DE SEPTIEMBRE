<script>
  const tulips = [
    "https://upload.wikimedia.org/wikipedia/commons/8/8b/Yellow_tulip_flower.jpg",
    "https://upload.wikimedia.org/wikipedia/commons/d/d2/Yellow_tulip_2.jpg",
    "https://upload.wikimedia.org/wikipedia/commons/5/5a/Tulipa_sylvestris_03.jpg"
  ];

  let giftInterval;

  document.getElementById("showGift").addEventListener("click", () => {
    // Evita que se creen varios intervalos
    if(giftInterval) return;

    giftInterval = setInterval(() => {
      const tulip = document.createElement("img");
      tulip.src = tulips[Math.floor(Math.random() * tulips.length)];
      tulip.classList.add("tulip");
      tulip.style.left = Math.random() * window.innerWidth + "px";
      tulip.style.animationDuration = (Math.random() * 4 + 4) + "s";
      document.body.appendChild(tulip);

      // Eliminar tulipanes despuÃ©s de caer
      tulip.addEventListener("animationend", () => tulip.remove());
    }, 500); // Cada 0.5s aparece un tulipÃ¡n
  });

  // Mensaje sorpresa
  window.onload = () => {
    setTimeout(() => {
      alert("ðŸ’› Sorpresa amor... este ramo de tulipanes amarillos es para ti ðŸŒ¼");
    }, 1200);
  };
</script>

